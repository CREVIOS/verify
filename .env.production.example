# Production Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Database
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=ipo_verification

# ============================================================================
# Message Broker
# ============================================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================================================
# AI Services API Keys
# ============================================================================

# OpenAI (for embeddings - text-embedding-3-large)
OPENAI_API_KEY=sk-...

# Mistral AI (for document extraction and verification)
MISTRAL_API_KEY=...

# Google Gemini (alternative for verification)
GEMINI_API_KEY=...

# ============================================================================
# Supabase (for document storage)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ============================================================================
# Application Settings
# ============================================================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_64_CHARS
ENVIRONMENT=production
DEBUG=false

# ============================================================================
# CORS Origins (comma-separated)
# ============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Frontend
# ============================================================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
