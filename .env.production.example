# Production Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Database
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=ipo_verification

# ============================================================================
# Message Broker
# ============================================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================================================
# AI Services API Keys
# ============================================================================

# OpenAI (for embeddings and GPT-4.1 verification)
# - text-embedding-3-large (3,072 dimensions)
# - gpt-4.1 (2025 best model with 1M token context)
OPENAI_API_KEY=sk-...

# Google Gemini (for cross-validation with GPT-4.1)
# - gemini-2.5-pro (2025 best model - Google's most intelligent)
GEMINI_API_KEY=...

# ============================================================================
# Supabase (for document storage)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ============================================================================
# Application Settings
# ============================================================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_64_CHARS
ENVIRONMENT=production
DEBUG=false

# ============================================================================
# CORS Origins (comma-separated)
# ============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Frontend
# ============================================================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
